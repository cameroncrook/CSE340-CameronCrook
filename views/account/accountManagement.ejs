<section>
    <% if (title) { %>
        <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>
</section>

<section>
    <%- messages() %>
    <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>
</section>

<section>
    <a href="/account/update">Update Account</a>
    <% if (account.account_type == 'Admin') { %>
        <a href="/account/manage-users">Manage Users</a>
    <% } %>
</section>