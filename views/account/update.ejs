<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<section>
    <%- messages() %>
    <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>
</section>

<section>
    <h2>Account Update</h2>
    <form class="register-form" action="/account/account-update" method="post">
        <label for="account_firstname" class="register-form__label">First name</label>
        <input type="text" id="account_firstname" class="register-form__input" name="account_firstname" required value="<%= locals.account_firstname %>">

        <label for="account_lastname" class="register-form__label">Last name</label>
        <input type="text" class="register-form__input" id="account_lastname" name="account_lastname" required value="<%= locals.account_lastname %>">

        <label for="account_email" class="register-form__label">Email Address</label>
        <input type="email" class="register-form__input" id="account_email" name="account_email" required value="<%= locals.account_email %>">

        <div class="register-form__submit">
            <input type="submit" value="Update">
        </div>

        <input type="hidden" name="account_id"
        <% if(locals.account_id) { %> value="<%= locals.account_id %>"
        <% } %>>
    </form>

    <h2>Change Password</h2>
    <form class="register-form" action="/account/change-password" method="POST">
        <label for="account_password" class="register-form__label">Password</label>
        <input 
            type="text" 
            class="register-form__input" 
            id="account_password" 
            name="account_password" 
            pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*\W).{12,}"
            title="Password must contain 12 characters a capital letter, a special character, and a number"
            required>

        <div class="register-form__submit">
            <input type="submit" value="Change">
        </div>

        <input type="hidden" name="account_id"
        <% if(locals.account_id) { %> value="<%= locals.account_id %>"
        <% } %>>
    </form>
</section>